<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="WebhardMapper">
    <select id="selectAllWebhard" resultType="webhard.Webhard">
        SELECT * FROM webhard
    </select>

	<select id="countProducts" parameterType="int" resultType="int">
        SELECT stock FROM products WHERE id = #{id}
    </select>

    <select id="selectProductById" parameterType="int" resultType="webhard.Webhard">
        SELECT * FROM products WHERE id = #{id}
    </select>

    <insert id="insertProduct" parameterType="webhard.Webhard">
        INSERT INTO products (name, description, price, stock)
        VALUES (#{name}, #{description}, #{price}, #{stock})
    </insert>

    <update id="updateProduct" parameterType="webhard.Webhard">
        UPDATE products
        SET name = #{name}, description = #{description}, price = #{price}, stock = #{stock}
        WHERE id = #{id}
    </update>
    
    <update id="decreaseStock" parameterType="int">
        UPDATE products
        SET stock = stock - 1
        WHERE id = #{id}
    </update>

    <delete id="deleteProduct" parameterType="int">
        DELETE FROM products WHERE id = #{id}
    </delete>
</mapper>